#set($notificationPreference = "")
#if($codeNotifications)
    #set($notificationPreference = "false")
#else
    #set($notificationPreference = "true")
#end

<div id="notifications-profile-fragment" class="module">
    <form action="$pluginUrl" method="post">
        <input type="hidden" name="codeNotifications" value="$notificationPreference"/>
        <div class="mod-header">
            <h3>Notifications</h3>
        </div>
        <br/>
        <div class="mod-content">
            <div class="item-details">
                <dl>
                    <dt style="vertical-align: baseline;">Code notifications:</dt>
                    <dd>
                        <button type="submit" class="aui-button aui-button-subtle">
                            #if($codeNotifications)
                                Disable
                            #else
                                Enable
                            #end
                        </button>
                    </dd>
                </dl>
            </div>
        </div>
    </form>
</div>